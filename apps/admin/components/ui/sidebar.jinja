{#def title="Admin", items=None, active_path=None #}
{% set items = items or [] %}

<div class="admin-sidebar-inner">
  <div class="admin-sidebar-header">
    <div>
      <div class="admin-brand">{{ title }}</div>
      <div class="admin-subtitle">Painel</div>
    </div>

    <button class="admin-sidebar-toggle btn-ghost btn-sm" type="button" data-sidebar-toggle>
      <<
    </button>
  </div>

  <nav class="admin-nav" aria-label="Admin">
    {% for it in items %}
      {% set href = it.href if it.href is defined else it['href'] %}
      {% set label = it.label if it.label is defined else it['label'] %}
      {% set is_active = (active_path == href) %}
      <a class="admin-nav-link {{ 'btn-secondary' if is_active else 'btn-ghost' }} btn-sm"
         href="{{ href }}"
         aria-label="{{ label }}"
         {% if is_active %}aria-current="page"{% endif %}>
        <span class="admin-nav-label">{{ label }}</span>
      </a>
    {% endfor %}
  </nav>
</div>
