{#def comment=None #}
{#import "../ui/Badge.jinja" as Badge #}

{# Comment detail modal - shown when clicking on a comment row #}
<div 
    id="comment-modal" 
    class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50 backdrop-blur-sm"
    onclick="if(event.target === this) this.classList.add('hidden')"
>
    <div class="bg-gray-900 border border-gray-800 rounded-lg shadow-xl max-w-lg w-full mx-4 max-h-[80vh] overflow-y-auto">
        <div class="p-6 space-y-4">
            <div class="flex items-center justify-between">
                <h3 class="text-lg font-semibold text-white">Comment Details</h3>
                <button 
                    type="button" 
                    onclick="document.getElementById('comment-modal').classList.add('hidden')"
                    class="text-gray-400 hover:text-white transition-colors"
                >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            
            {% if comment %}
            <div class="space-y-4">
                {# Author Info #}
                <div class="space-y-1">
                    <label class="text-xs text-gray-500 uppercase tracking-wider">Author</label>
                    <div class="flex items-center gap-2">
                        <span class="text-white font-medium">{{ comment.display_name }}</span>
                        {% if comment.is_guest %}
                        <Badge text="Guest" color="gray" size="sm" />
                        {% endif %}
                        {% if comment.is_deleted %}
                        <Badge text="Deleted" color="red" size="sm" />
                        {% endif %}
                        {% if comment.is_flagged %}
                        <Badge text="Flagged" color="yellow" size="sm" />
                        {% endif %}
                    </div>
                </div>
                
                {# Guest Email #}
                {% if comment.guest_email %}
                <div class="space-y-1">
                    <label class="text-xs text-gray-500 uppercase tracking-wider">Guest Email</label>
                    <p class="text-gray-300 text-sm">{{ comment.guest_email }}</p>
                </div>
                {% endif %}
                
                {# IP Address #}
                {% if comment.ip_address %}
                <div class="space-y-1">
                    <label class="text-xs text-gray-500 uppercase tracking-wider">IP Address</label>
                    <p class="text-gray-300 text-sm font-mono">{{ comment.ip_address }}</p>
                </div>
                {% endif %}
                
                {# Post #}
                <div class="space-y-1">
                    <label class="text-xs text-gray-500 uppercase tracking-wider">Post</label>
                    <a href="{{ PUBLIC_BLOG_URL }}/posts/{{ comment.post_slug }}" class="text-accent hover:underline text-sm" target="_blank">
                        {{ comment.post_title }}
                    </a>
                </div>
                
                {# Date #}
                <div class="space-y-1">
                    <label class="text-xs text-gray-500 uppercase tracking-wider">Date</label>
                    <p class="text-gray-300 text-sm">{{ comment.created_at.strftime('%d/%m/%Y %H:%M:%S') if comment.created_at else '-' }}</p>
                </div>
                
                {# Content #}
                <div class="space-y-1">
                    <label class="text-xs text-gray-500 uppercase tracking-wider">Content</label>
                    <div class="bg-gray-800 rounded-lg p-4">
                        <p class="text-gray-200 text-sm whitespace-pre-wrap">{{ comment.content }}</p>
                    </div>
                </div>
            </div>
            
            {# Actions #}
            <div class="flex gap-2 pt-4 border-t border-gray-800">
                {% if comment.is_deleted %}
                <form action="/admin/comments/{{ comment.id }}/restore" method="POST" class="flex-1">
                    <button type="submit" class="w-full px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm rounded-lg transition-colors">
                        Restore Comment
                    </button>
                </form>
                {% else %}
                <form action="/admin/comments/{{ comment.id }}/delete" method="POST" class="flex-1">
                    <button type="submit" class="w-full px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm rounded-lg transition-colors">
                        Delete Comment
                    </button>
                </form>
                {% endif %}
                <button 
                    type="button" 
                    onclick="document.getElementById('comment-modal').classList.add('hidden')"
                    class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white text-sm rounded-lg transition-colors"
                >
                    Close
                </button>
            </div>
            {% else %}
            <p class="text-gray-400">No comment selected</p>
            {% endif %}
        </div>
    </div>
</div>
