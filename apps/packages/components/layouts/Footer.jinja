{#def brand="App", links=None #}

<footer class="border-t border-zinc-200 bg-white dark:border-zinc-800 dark:bg-zinc-950">
  <div class="mx-auto w-full max-w-6xl px-4 py-4">
    <div class="flex flex-col gap-2 text-xs text-zinc-500 dark:text-zinc-400 sm:flex-row sm:items-center sm:justify-between">
      <span>&copy; {{ current_year }} {{ brand }}</span>

      {% if links %}
        <nav aria-label="Footer links">
          <ul class="flex gap-4">
            {% for l in links %}
              <li>
                <a href="{{ l.href }}" class="transition hover:text-zinc-700 dark:hover:text-zinc-200">
                  {{ l.label }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </nav>
      {% endif %}
    </div>
  </div>
</footer>
