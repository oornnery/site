{#import "./Base.jinja" as Base #}
{#import "ui/Navbar.jinja" as Navbar #}
{#import "ui/Footer.jinja" as Footer #}
{#import "ui/Breadcrumb.jinja" as Breadcrumb #}
{#def title="Portfolio", current_page="", user=None, request=None, show_breadcrumb=true #}

<Base title={{ title }} current_page={{ current_page }}>
    <Navbar user={{ user }} current_page={{ current_page }} request={{ request }} />
    
    <div class="max-w-4xl mx-auto px-4 sm:px-6 flex flex-col min-h-screen pt-16 sm:pt-20">
        {% if show_breadcrumb and request and request.url.path != '/' %}
        <Breadcrumb request={{ request }}>
            {% slot breadcrumb_actions %}{% endslot %}
        </Breadcrumb>
        {% endif %}
        
        <main class="flex-grow fade-in py-6 sm:py-8">
            {{ content }}
        </main>
        
        <Footer />
    </div>
</Base>
