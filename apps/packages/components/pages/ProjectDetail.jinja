{#def request, user=None, project, content="" #}
{#import "../layouts/Public.jinja" as PublicLayout #}
{#import "../ui/Tag.jinja" as Tag #}
{#import "../ui/Button.jinja" as Button #}

<PublicLayout request={{ request }} user={{ user }} title={{ project.title }} current_page="projects">
    <article class="space-y-8">
        <header>
            <div class="flex items-center gap-4 text-sm text-gray-500 mb-4">
                {% if project.created_at %}
                <span>{{ project.created_at.strftime('%Y') }}</span>
                {% endif %}
                {% if project.category %}
                <span>&bull;</span>
                <span>{{ project.category }}</span>
                {% endif %}
                {% if project.featured %}
                <span>&bull;</span>
                <span class="text-green-500">&#9733; Featured</span>
                {% endif %}
            </div>
            <h1 class="text-4xl font-bold text-white mb-4">{{ project.title }}</h1>
            {% if project.description %}
            <p class="text-xl text-gray-400">{{ project.description }}</p>
            {% endif %}
            
            {% if project.tech_stack %}
            <div class="flex flex-wrap gap-2 mt-4">
                {% for tech in project.tech_stack %}
                <Tag text={{ tech }} />
                {% endfor %}
            </div>
            {% endif %}
            
            <div class="flex gap-4 mt-6">
                {% if project.demo_url %}
                <Button href={{ project.demo_url }} variant="primary">
                    Live Demo
                </Button>
                {% endif %}
                {% if project.github_url %}
                <Button href={{ project.github_url }}>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg>
                    Source Code
                </Button>
                {% endif %}
            </div>
        </header>

        {% if content %}
        <div class="prose prose-invert max-w-none text-gray-300 leading-relaxed">
            {{ content | safe }}
        </div>
        {% endif %}
    </article>
</PublicLayout>
