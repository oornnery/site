{#def items=[] #}

{% if items %}
  <nav aria-label="Breadcrumb" class="mb-4 text-sm text-zinc-500 dark:text-zinc-400">
    <ol class="flex flex-wrap items-center gap-2">
      {% for item in items %}
        {% set href = item.get('href') if item else None %}
        <li class="flex items-center gap-2">
          {% if href %}
            <a href="{{ href }}" class="hover:text-zinc-700 dark:hover:text-zinc-200">
              {{ item.label }}
            </a>
          {% else %}
            <span class="text-zinc-700 dark:text-zinc-200">{{ item.label }}</span>
          {% endif %}
          {% if not loop.last %}
            <span class="text-zinc-400">/</span>
          {% endif %}
        </li>
      {% endfor %}
    </ol>
  </nav>
{% endif %}
