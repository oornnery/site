{#import "@ui/ui/StatusDot.jinja" as StatusDot #}
{#import "@ui/ui/Badge.jinja" as Badge #}
{#def service=None #}

<div class="px-4 py-3" x-data="{ open: false, logs: '', es: null }" x-effect="
  if (open && !es) {
    es = new EventSource('/healthz/logs/stream?service_id={{ service.id }}');
    es.onmessage = (e) => { logs = e.data + '\n' + logs; };
    es.onerror = () => { if (es) { es.close(); es = null; } };
  } else if (!open && es) {
    es.close();
    es = null;
  }
">
  <button
    type="button"
    class="flex w-full items-center justify-between gap-4"
    @click="open = !open"
    x-bind:aria-expanded="open"
  >
    <div class="flex min-w-0 items-center gap-3">
      <div class="flex flex-col text-left">
        <span class="font-medium text-zinc-900 dark:text-zinc-100">{{ service.name }}</span>
        <span class="text-xs text-zinc-500">{{ service.url }}</span>
      </div>
    </div>

    <div class="flex items-center gap-3 text-sm">
      <div class="flex items-center gap-2">
        <StatusDot ok={{ service.ok }} />
        {% if service.ok %}
          <Badge tone="success">OK</Badge>
        {% else %}
          <Badge tone="danger">DOWN</Badge>
        {% endif %}
        <span class="text-zinc-600 dark:text-zinc-300">{{ service.status_text }}</span>
      </div>
      <span class="hidden text-zinc-500 sm:inline">{{ service.code }}</span>
      <span class="hidden text-zinc-500 md:inline">{{ service.datetime or "—" }}</span>
      <span class="text-zinc-400" x-text="open ? '▲' : '▼'"></span>
    </div>
  </button>

  <div x-show="open" x-transition class="mt-3 rounded-lg border border-zinc-200 bg-zinc-50 p-3 dark:border-zinc-800 dark:bg-zinc-950">
    <label class="block text-xs font-medium text-zinc-600 dark:text-zinc-300">
      Logs (updates every 2s while expanded)
    </label>
    <textarea
      class="mt-2 h-40 w-full resize-none rounded-lg border border-zinc-200 bg-white p-3 font-mono text-xs text-zinc-800 dark:border-zinc-800 dark:bg-zinc-900 dark:text-zinc-100"
      readonly
      x-text="logs || 'Loading logs...'"
    ></textarea>
  </div>
</div>
