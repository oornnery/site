{#def certificates #}

<section class="flex min-h-0 flex-col gap-y-3 print:gap-y-1">
    <h2 class="text-lg sm:text-xl font-bold text-white print:text-black" id="certificates-section">Certificates</h2>
    <div class="space-y-3 sm:space-y-4" role="feed" aria-labelledby="certificates-section">
        {% for cert in certificates %}
        <article role="article">
            <div class="text-card-foreground">
                <div class="flex flex-col space-y-1">
                    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-1 sm:gap-2">
                        <h3 class="text-sm sm:text-base font-semibold leading-none text-white print:text-black">
                            {% if cert.url %}
                            <a href="{{ cert.url }}" target="_blank" rel="noopener noreferrer" class="hover:underline">
                                {{ cert.name }}
                            </a>
                            {% else %}
                            {{ cert.name }}
                            {% endif %}
                        </h3>
                        <div class="text-xs sm:text-sm tabular-nums text-gray-500 print:text-gray-600">{{ cert.date }}
                        </div>
                    </div>
                </div>
                <div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2 mt-1 sm:mt-2">
                    <span
                        class="text-pretty font-mono text-xs sm:text-sm text-gray-400 print:text-gray-700 print:text-[12px]">{{
                        cert.issuer }}</span>
                    {% if cert.credential_id %}
                    <span class="text-xs text-gray-500 print:text-gray-600">&bull; ID: {{ cert.credential_id }}</span>
                    {% endif %}
                </div>
            </div>
        </article>
        {% endfor %}
    </div>
</section>