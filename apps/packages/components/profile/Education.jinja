{#def education #}

<section class="flex min-h-0 flex-col gap-y-3 print:gap-y-1">
    <h2 class="text-lg sm:text-xl font-bold text-white print:text-black" id="education-section">Education</h2>
    <div class="space-y-3 sm:space-y-4" role="feed" aria-labelledby="education-section">
        {% for edu in education %}
        <article role="article">
            <div class="text-card-foreground">
                <div class="flex flex-col space-y-1">
                    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-1 sm:gap-2">
                        <h3 class="text-sm sm:text-base font-semibold leading-none text-white print:text-black">{{ edu.school }}</h3>
                        <div class="text-xs sm:text-sm tabular-nums text-gray-500 print:text-gray-600">{{ edu.start_date }} - {{ edu.end_date }}</div>
                    </div>
                </div>
                <div class="text-pretty font-mono text-xs sm:text-sm mt-1 sm:mt-2 text-gray-400 print:text-gray-700 print:text-[12px]">{{ edu.degree }}</div>
            </div>
        </article>
        {% endfor %}
    </div>
</section>
