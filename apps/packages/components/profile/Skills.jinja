{#def skills #}

<section class="flex min-h-0 flex-col gap-y-3 print:gap-y-1">
    <h2 class="text-lg sm:text-xl font-bold text-white print:text-black" id="skills-section">Skills</h2>
    <ul class="flex list-none flex-wrap gap-1.5 sm:gap-2 p-0" aria-label="List of skills" aria-labelledby="skills-section">
        {% for skill in skills %}
        <li>
            <div class="inline-flex items-center rounded-md border px-2 sm:px-3 py-1 text-[10px] sm:text-xs font-semibold font-mono transition-colors text-nowrap border-transparent bg-gray-800 text-gray-200 hover:bg-gray-700 print:bg-gray-200 print:text-gray-700 print:text-[10px]">
                {{ skill }}
            </div>
        </li>
        {% endfor %}
    </ul>
</section>
