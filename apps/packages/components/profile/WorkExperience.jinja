{#def work_experience #}

<section class="flex min-h-0 flex-col gap-y-3 print:gap-y-1">
    <h2 class="text-lg sm:text-xl font-bold text-white print:text-black" id="work-experience">Work Experience</h2>
    <div class="flex flex-col gap-4 sm:gap-6" role="feed" aria-labelledby="work-experience">
        {% for job in work_experience %}
        <div class="font-mono flex flex-col justify-start items-start gap-1 sm:gap-2 print:mb-4">
            <div class="flex flex-col sm:flex-row sm:flex-wrap justify-between items-start self-stretch gap-1 sm:gap-2">
                <div class="flex flex-wrap justify-start items-center gap-2">
                    <p class="text-sm sm:text-base font-semibold text-left text-white print:text-black">{{ job.title }}</p>
                    {% if job.location %}
                    <div class="flex justify-center items-center relative overflow-hidden gap-2.5 px-2 py-0.5 rounded bg-gray-800 print:bg-gray-200">
                        <p class="text-[10px] sm:text-[12px] font-semibold text-center text-gray-400 print:text-gray-600">{{ job.location }}</p>
                    </div>
                    {% endif %}
                </div>
                <p class="text-xs sm:text-sm text-left sm:text-right text-gray-500 print:text-gray-600">{{ job.start_date }} - {{ job.end_date }}</p>
            </div>
            <div class="flex flex-col justify-start items-start relative gap-1 sm:gap-1.5">
                <p class="self-stretch text-xs sm:text-sm font-medium text-left text-gray-400 print:text-gray-600 font-mono capitalize flex flex-wrap gap-1">
                    <span>{{ job.company }}</span>
                </p>
                <p class="self-stretch text-xs sm:text-sm font-medium text-left text-gray-400 print:text-gray-700 leading-relaxed">{{ job.description }}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
