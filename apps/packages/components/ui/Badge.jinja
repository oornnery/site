{#def tone="neutral" #}

{% set base = "inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium ring-1 ring-inset" %}
{% set tones = {
  "neutral": "bg-zinc-50 text-zinc-700 ring-zinc-200 dark:bg-zinc-900 dark:text-zinc-200 dark:ring-zinc-700",
  "success": "bg-emerald-50 text-emerald-800 ring-emerald-200 dark:bg-emerald-900/30 dark:text-emerald-200 dark:ring-emerald-800",
  "danger": "bg-rose-50 text-rose-800 ring-rose-200 dark:bg-rose-900/30 dark:text-rose-200 dark:ring-rose-800"
} %}

<span {{ attrs.render(class=base ~ " " ~ tones.get(tone, tones["neutral"])) }}>
  {{ content }}
</span>
