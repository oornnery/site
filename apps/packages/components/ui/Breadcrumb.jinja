{#def request #}

<nav class="text-sm text-gray-500 mb-6 fade-in flex items-center justify-between" aria-label="Breadcrumb">
    <ol class="list-none p-0 inline-flex flex-wrap">
        <li class="flex items-center">
            <a href="/" class="hover:text-white transition-colors">Home</a>
        </li>
        {% set parts = request.url.path.strip('/').split('/') %}
        {% set ns = namespace(path='') %}
        {% for part in parts %}
            {% set ns.path = ns.path + '/' + part %}
            <li class="flex items-center">
                <svg class="fill-current w-3 h-3 mx-3 text-gray-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                    <path d="M285.476 272.971L91.132 467.314c-9.373 9.373-24.569 9.373-33.941 0l-22.667-22.667c-9.357-9.357-9.375-24.522-.04-33.901L188.505 256 34.484 101.255c-9.335-9.379-9.317-24.544.04-33.901l22.667-22.667c9.373-9.373 24.569-9.373 33.941 0L285.475 239.03c9.373 9.372 9.373 24.568.001 33.941z"/>
                </svg>
                {% if loop.last %}
                    <span class="text-gray-300 capitalize truncate max-w-[200px]">{{ part | replace('-', ' ') }}</span>
                {% else %}
                    <a href={{ ns.path }} class="hover:text-white transition-colors capitalize">{{ part | replace('-', ' ') }}</a>
                {% endif %}
            </li>
        {% endfor %}
    </ol>
    {{ content }}
</nav>
