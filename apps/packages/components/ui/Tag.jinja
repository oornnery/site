{#def 
    text="",
    variant="default",
    size="default",
    removable=False,
    href=""
#}
{#-
Tag/Badge Component

Variants:
    - default: Standard gray tag
    - primary: White/light tag
    - accent: Teal accent tag
    - secondary: Purple accent tag
    - success: Green tag
    - warning: Orange tag
    - danger: Red tag
    - outline: Bordered only

Sizes:
    - xs: Extra small
    - sm: Small
    - default: Standard
-#}

{% set base_classes = "inline-flex items-center gap-1 font-medium rounded-full transition-all duration-200" %}

{% set variant_classes = {
    "default": "bg-gray-800 text-gray-300 border border-gray-700",
    "primary": "bg-gray-200 text-gray-900",
    "accent": "bg-accent/10 text-accent border border-accent/20",
    "secondary": "bg-accent-secondary/10 text-accent-glow border border-accent-secondary/20",
    "success": "bg-green-500/10 text-green-400 border border-green-500/20",
    "warning": "bg-orange-500/10 text-orange-400 border border-orange-500/20",
    "danger": "bg-red-500/10 text-red-400 border border-red-500/20",
    "outline": "bg-transparent text-gray-400 border border-gray-700 hover:text-gray-200 hover:border-gray-600"
} %}

{% set size_classes = {
    "xs": "px-2 py-0.5 text-[10px]",
    "sm": "px-2.5 py-0.5 text-xs",
    "default": "px-3 py-1 text-xs"
} %}

{% set hover_classes = "hover:opacity-80 cursor-pointer" if href or removable else "" %}

{% if href %}
<a 
    href="{{ href }}" 
    class="{{ base_classes }} {{ variant_classes[variant] }} {{ size_classes[size] }} {{ hover_classes }}"
    {{ attrs.render() }}
>
    {{ text or content }}
    {% if removable %}
    <svg class="h-3 w-3 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
    </svg>
    {% endif %}
</a>
{% else %}
<span 
    class="{{ base_classes }} {{ variant_classes[variant] }} {{ size_classes[size] }} {{ hover_classes }}"
    {{ attrs.render() }}
>
    {{ text or content }}
    {% if removable %}
    <button type="button" class="hover:text-white ml-0.5">
        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
    </button>
    {% endif %}
</span>
{% endif %}
