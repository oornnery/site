{#def #}
{# Container for toast notifications - should be included once in the layout #}

<div 
    id="toast-container" 
    class="fixed bottom-4 right-4 z-50 flex flex-col gap-2 pointer-events-none"
    aria-live="polite"
    aria-atomic="false"
>
    {# Toasts will be appended here via hx-swap-oob or JavaScript #}
    {{ content }}
</div>

<style>
#toast-container > * {
    pointer-events: auto;
}
</style>
