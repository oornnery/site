{#def brand="App", links=None #}
{% set links = links or [] %}

<header class="ui-header">
  <div class="ui-container ui-header-inner">
    <a class="ui-brand" href="/">{{ brand }}</a>
    <nav class="ui-nav">
      {% for item in links %}
        <a class="btn-ghost btn-sm" href="{{ item.href if item.href is defined else item['href'] }}">
          {{ item.label if item.label is defined else item['label'] }}
        </a>
      {% endfor %}
    </nav>
  </div>
</header>
